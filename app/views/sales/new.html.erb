<article>
  <%= form_for @sale do |f| %>
      <table id = "whole-card" class="mdl-data-table mdl-js-data-table edit-trip-table">
        <thead>
        <tr>
          <th id="table-title"><%= @title %> Trip</th>
          <th id="table-title"></th>
        </tr>
        <tr>
          <th><%= f.label :name, "Trip Name:" %></th>
          <th><%= f.label :description, "Description:" %></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td><%= f.text_field :name %></td>
          <td><%= f.text_field :description %></td>
        </tr>
        <tr>
          <th><%= f.label :trip_cost, "Trip Cost:" %></th>
          <th><%= f.label :destination_id, "Destination:" %></th>
        </tr>
        <tr>
          <td><%= f.number_field :trip_cost %></td>
          <td><%= f.select(:destination_id, Destination.all.map{ |d| ["#{d.continent}", d.id ] } ) %></td>
        </tr>

        <tr>
          <th><%= f.label :lat, "Latitude:" %></th>
          <th><%= f.label :long, "Longitude:" %></th>
        </tr>
        <tr>
          <td><%= f.number_field :lat %></td>
          <td><%= f.number_field :long %></td>
        </tr>


        <tr>
          <th><%= f.label :activity_id, "Activity:" %></th>
          <th><%= f.label :image, "Image:" %></th>
        </tr>
        <tr>
          <td><%= f.select(:activity_id, Activity.all.map{ |a| ["#{a.name}", a.id] } ) %></td>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "#{@title} Trip" %></td>
        </tr>
        </tr>
        </tbody>
      </table>
  <% end %>
</article>
